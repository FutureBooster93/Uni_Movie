@model List<Uni_Movie.Models.Movie>
<html>
<head>
    <title></title>
</head>
<body>
    <div class="page-content ">
        <!-- Main Slider -->
        <div class="section-area ovbl-light section-sp1 bg-fix online-cours"
             style="background-image: url(Layout/images/background/bg11.jpg);height:100vh">
            <div class="container" >
                <div class="row">
                    <div class="col-md-12 text-center text-white">
                        <h2>دوره‌های آنلاین آموزشی</h2>
                        <h5>آینده را با یادگرفتن مهارت‌ به کام خود کنید</h5>
                        <form class="cours-search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="امروز می‌خواهید چه چیزی بدانید؟">
                                <div class="input-group-append">
                                    <button class="btn" type="submit">جستجو</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mw800 m-auto">
                    <div class="row">
                        <div class="col-md-4 col-sm-6">
                            <div class="cours-search-bx m-b30">
                                <div class="icon-box">
                                    <h3><i class="ti-user"></i><span class="counter">5</span>میلیون</h3>
                                </div>
                                <span class="cours-search-text">پنج میلیون دانشجو</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="cours-search-bx m-b30">
                                <div class="icon-box">
                                    <h3><i class="ti-book"></i><span class="counter">30</span>هزار</h3>
                                </div>
                                <span class="cours-search-text">30,000 دوره</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="cours-search-bx m-b30">
                                <div class="icon-box">
                                    <h3><i class="ti-layout-list-post"></i><span class="counter">20</span>هزار</h3>
                                </div>
                                <span class="cours-search-text">هر چیزی را آنلاین بیاموزید</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Slider -->
        <div class="content-block">
            <!-- Popular Courses -->
            <!-- Popular Courses END -->
            <!-- Breadcrumb row -->
            <!-- Breadcrumb row END -->
            <!-- inner page banner END -->
            <div class="content-block">
                <!-- About Us -->
                <div class="section-area section-sp1">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {

                                        <div class="col-md-6 col-lg-4 col-sm-6 m-b30">
                                            <div class="cours-bx" style="background-color:darkgray">
                                                <div class="action-box">
                                                    <a href="#">
                                                        <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.MovieImage)}")" alt="">
                                                    </a>
                                                </div>
                                                <div class="info-bx text-center">
                                                    <h5><a class="text-black" style="text-decoration:none" href="#">@item.Title</a></h5>
                                                    <span class="text-secondary">@item.Director</span>
                                                </div>
                                                <div class="cours-more-info">
                                                    <div class="review text-center">
                                                        <span style="font-size:16px">IMDB: @item.Rate</span>

                                                    </div>
                                                    <div class="review text-center">
                                                        <span class="text-black" style="font-size:16px">genre: @item.genre.title </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="col-lg-12 m-b20">
                                        <div class="pagination-bx rounded-sm gray clearfix">
                                            <ul class="pagination justify-content-center">
                                                <li class="previous"><a href="#"><i class="ti-arrow-right"></i> قبلی</a></li>
                                                <li class="active"><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li class="next"><a href="#">بعدی<i class="ti-arrow-left"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- contact area END -->

            <!-- Form END -->

            <!-- Testimonials -->
            <!-- Testimonials END -->
            <!-- Testimonials ==== -->
            <!-- Testimonials END ==== -->
        </div>
        <!-- contact area END -->
    </div>
    <!-- Content END-->
</body>
</html>